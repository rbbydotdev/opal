{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext", "webworker"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "types": [],
    "typeRoots": [],
    "baseUrl": ".",
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    // "exactOptionalPropertyTypes": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noImplicitAny": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*.d.ts", "**/*.ts", "**/*.tsx", "./src/**/*.ts", "./src/**/*.tsx", "./src/types"],
  "exclude": [
    "proxies/**/*.ts",
    "proxies",
    "./git-protocol-proxy/**/*.ts",
    "./node_modules",
    "./tools",
    "./src/dist",
    "./dist/**",
    "dist",
    "src/dist/**",
    "**/*/*.test.ts",
    "src/app/sand/**",
    "node_modules/**/*",
    "tailwind.config.ts",
    "scripts/build-preview.ts",
    "*.ignore.*",
    "**/*.ignore.*", // Excludes any file with `.ignore.` in its name
    "**/_*" // Excludes any file or directory starting with `_`
  ]
}
