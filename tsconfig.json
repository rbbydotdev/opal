{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext", "webworker"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "types": ["@serwist/next/typings"],
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    // "moduleResolution": "bundler",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noImplicitAny": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/types.d.ts", "next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": [
    ".next",
    "src/app/sand/**",
    "node_modules",
    "tailwind.config.ts",
    "**/*.ignore.*", // Excludes any file with `.ignore.` in its name
    "**/_*" // Excludes any file or directory starting with `_`
  ]
}
