{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext", "webworker"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "types": [],
    "typeRoots": [],
    "baseUrl": ".",
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noImplicitAny": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "../tailwind.config.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.d.ts",
    "./playwrite-tests/**/*.ts",
    "*.ts",
    "*.d.ts"
  ],
  "exclude": [
    // "**/*.test.ts",
    "proxies/**/*.ts",
    "proxies",
    "patches",
    "./git-protocol-proxy/**/*.ts",
    "./node_modules",
    "tools.ignore",
    "./src/dist",
    "./dist/**",
    "dist",
    "src/dist/**",
    "src/app/sand/**",
    "node_modules",
    "node_modules/**/*",
    "scripts/build-preview.ts",
    "*.ignore.*",
    "**/*.ignore.*", // Excludes any file with `.ignore.` in its name
    "**/_*" // Excludes any file or directory starting with `_`
  ]
}
